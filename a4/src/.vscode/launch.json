            "name": "pac-man play",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pacman.py",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        // -------------- Reflex Agent Flags -----------------
        // -p player Use: ReflexAgent to run model
        // -l layout Use: testClassic and can even run poorly on this
        //           default: mediumClassic
        // -k num of ghosts
        //           Note: You can never have more ghosts than the layout permists 
        //           See: src/layouts/mediumClassic.lay
        // "-g DirectionalGhost" runs the Ghosts in a nonrandom decision pattern
        // -n num of games to play in a row
        // -q Graphics off
        //

        {
            "name": "pac-man reflexAgent",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pacman.py",
            "args": ["-p", "AlphaBetaAgent", "-a", "depth=4"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
